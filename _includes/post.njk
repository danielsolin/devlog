---
layout: layout.njk
---

<article>
    <h1>{{ title }}</h1>

  {% if author or date %}
  <p>
    <em>
    {% if author %}By {{ author }}{% endif %}{% if date %} on {{ date | dateFormat }}{% endif %}
    </em>
  </p>
  {% endif %}

  {% if tags %}
  <p>
    Tags:
    {% for tag in tags %}
      <span>{{ tag }}</span>{% if not loop.last %}, {% endif %}
    {% endfor %}
  </p>
  {% endif %}
  {{ content | safe }}

  <footer>
    <a href="/">Back</a>
  </footer>
</article>
